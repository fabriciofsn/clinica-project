{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                                
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@shared/*": ["./shared/*"],
      "@main/*": ["./main/*"]
    },
    "rootDirs": ["src"],
    "sourceMap": true,                                
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,
    "strict": true,     
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
